                   <input type="text" class="form-control" placeholder="Artist/Band" name="artistInput" required>
                </div>
                <div class="form-group">
                   <input type="submit" class="btn btn-success btn-block"  value="Create">
                </div>
               </form>
               <form action="/user/deleteQuotebook/{{quotebook._id}}" method="post" class="text-center">
                <button class="btn btn-danger" id="deleteFontSize">Delete Quotebook</button>
               </form>
            </article>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

