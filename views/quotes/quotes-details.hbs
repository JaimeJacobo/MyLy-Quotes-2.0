


<div id="contentOfDetails">
  <div>
  <h3 class="text-center" id="quotebookName">{{quotebook.name}}</h3>
</div>

<div class="text-center" id="allTheQuotes">
  {{#each quotebook.quotes}}
    <div class="secondCard">
      <p class="colorBlue italic">"{{this.name}}"</p>
        <hr>
      <p class="colorBlue flexedSized"><img id="noteImage" src="/../images/note.png" alt=""> {{this.song}}</p>
      <p class="colorBlue flexedSized"><img id="microphoneImage" src="/../images/microphone.png" alt=""> {{this.artist}}</p>


        <div class="flexIcons">
          <form action="">
            <button class="close" aria-label="Close"><span aria-hidden="true"><img src="/../images/pencil.png" alt=""   id="pencil"></span></button>
          </form>
          <form action="/user/deleteQuote/{{this._id}}/{{this.quotebook}}" method="post">
            <button class="close" aria-label="Close"><span id="cross" aria-hidden="true">&times;</span></button>
          </form>
        </div>
      
      
    </div>
  {{/each}}
</div>

