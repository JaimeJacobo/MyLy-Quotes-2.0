


<div id="contentOfDetails">
  <div>
  <h3 class="text-center">{{quotebook.name}}</h3>
</div>

<div class="text-center" id="allTheQuotes">
  {{#each quotebook.quotes}}
    <div class="secondCard">
      <p class="colorBlue italic">" {{this.name}} "</p>
        <hr>
      <p class="colorBlue flexedSized"><img id="microphoneImage" src="/../images/microphone.png" alt=""> {{this.artist}}</p>
      <p class="colorBlue flexedSized"><img id="noteImage" src="/../images/note.png" alt=""> {{this.song}}</p>
      {{!-- <p class="colorBlue">In Song: {{this.song}}</p> --}}
      <form action="/user/deleteQuote/{{this._id}}/{{this.quotebook}}" method="post">
        <button>Delete This Quote</button>
      </form>
    </div>
  {{/each}}
</div>

<form action="/user/addQuote/{{quotebook._id}}" method="post" class="text-center">
  <label for="addQuoteInput">Add Your Quote</label>
  <input id="addQuoteInput" type="text" name="quoteInput" />
  <br />

  <label for="addSongInput">From What Song</label>
  <input id="addSongInput" type="text" name="songInput" />
  <br />

  <label for="addArtistInput">Which Artist Said this Quote?</label>
  <input id="addArtistInput" type="text" name="artistInput" />
  <br />

  <button>Save Your Quote</button>
</form>

<form action="/user/deleteQuotebook/{{quotebook._id}}" method="post" class="text-center">
  <button>Delete This QuoteBook</button>
</form>

</div>

 