                 <div class="form-group">
                   <input type="text" class="form-control" name="name" value="{{quote.name}}"required>
                </div>
                <div class="form-group">
                   <input type="text" class="form-control" name="song" value="{{quote.song}}" required>
                 </div>
                <div class="form-group">
                   <input type="text" class="form-control" name="artis" value="{{quote.artist}}" required>
                </div>
                <div class="form-group">
                   <input type="submit" class="btn btn-success btn-block"  value="Edit">
                </div>
               </form>
            </article>
          </div>
        </div>
      </div>
    </div>
