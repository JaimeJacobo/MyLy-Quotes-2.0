<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
<div class="container" id="addNewQuote">
  <div class="login-signup flexCentered">
    <div class="tab-content">
      <div role="tabpanel" class="tab-pane active" id="home">
        <div class="row" id="createAccountInside">
          <div class="col-sm-12 mobile-pull login">
            <article role="login">
              <h4 class="text-center" id="createYourUserText">Insert new values</h4>
